# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# JavaScript files
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose.yml text eol=lf

# Markdown
*.md text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Configuration files
*.ini text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Exclude binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
